[Unit]
Description=HAProxy Load Balancer with Linux Kernel Library
After=network.target

[Service]
Type=forking
PIDFile=/var/run/haproxy-lkl.pid
ExecStart=/usr/local/sbin/haproxy-lkl -p '/var/run/haproxy-lkl.pid'
ExecStop=/bin/kill -USR1 $MAINPID
ExecStopPost=/usr/local/sbin/haproxy-lkl -c >/dev/null 2>&1
KillMode=mixed
Restart=always

[Install]
WantedBy=multi-user.target
